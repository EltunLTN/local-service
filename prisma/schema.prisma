// Prisma schema for UstaBul - Local Service Booking Platform
// Database: PostgreSQL (Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================
// USER & AUTHENTICATION
// =============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  phone         String?
  password      String?
  role          String    @default("CUSTOMER")
  emailVerified DateTime?
  phoneVerified DateTime?
  otpCode       String?
  otpExpires    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  customer    Customer?
  master      Master?
  sessions    Session[]
  accounts    Account[]
  sentMessages     Message[] @relation("sender")
  receivedMessages Message[] @relation("receiver")
  notifications    Notification[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =============================================
// CUSTOMER
// =============================================

model Customer {
  id        String   @id @default(cuid())
  userId    String   @unique
  firstName String
  lastName  String
  avatar    String?
  address   String?
  district  String?
  lat       Float?
  lng       Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders    Order[]
  reviews   Review[]
  favorites Favorite[]
  conversations Conversation[]
}

// =============================================
// MASTER (Service Provider)
// =============================================

model Master {
  id              String   @id @default(cuid())
  userId          String   @unique
  firstName       String
  lastName        String
  avatar          String?
  coverImage      String?
  bio             String? @db.Text
  phone           String
  address         String?
  district        String?
  lat             Float?
  lng             Float?
  
  experience      Int      @default(0)
  hourlyRate      Float    @default(0)
  isVerified      Boolean  @default(false)
  isInsured       Boolean  @default(false)
  isPremium       Boolean  @default(false)
  isActive        Boolean  @default(true)
  
  rating          Float    @default(0)
  reviewCount     Int      @default(0)
  completedJobs   Int      @default(0)
  responseRate    Int      @default(100)
  responseTime    Int      @default(60)
  
  workingDays     String[] @default(["monday", "tuesday", "wednesday", "thursday", "friday"])
  workingHoursStart String @default("09:00")
  workingHoursEnd   String @default("18:00")
  
  languages       String[] @default(["az"])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories    MasterCategory[]
  services      MasterService[]
  portfolioItems PortfolioItem[]
  orders        Order[]
  reviews       Review[]
  favoritedBy   Favorite[]
  availability  MasterAvailability[]
  conversations Conversation[]
  applications  JobApplication[]
}

model MasterCategory {
  id         String   @id @default(cuid())
  masterId   String
  categoryId String
  createdAt  DateTime @default(now())

  master   Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([masterId, categoryId])
}

model MasterService {
  id          String   @id @default(cuid())
  masterId    String
  name        String
  description String?
  price       Float
  duration    Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  master Master @relation(fields: [masterId], references: [id], onDelete: Cascade)
  orders Order[]
}

model PortfolioItem {
  id          String   @id @default(cuid())
  masterId    String
  type        String   @default("IMAGE")
  url         String
  thumbnail   String?
  title       String
  description String?
  beforeImage String?
  afterImage  String?
  images      String[] @default([])
  category    String?
  duration    Int?
  price       Float?
  createdAt   DateTime @default(now())

  master Master @relation(fields: [masterId], references: [id], onDelete: Cascade)
}

// =============================================
// CATEGORIES & SERVICES
// =============================================

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  icon        String?
  image       String?
  color       String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subcategories Subcategory[]
  masters       MasterCategory[]
  orders        Order[]
}

model Subcategory {
  id          String   @id @default(cuid())
  categoryId  String
  name        String
  slug        String   @unique
  description String?
  basePrice   Float    @default(0)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orders   Order[]
}

// =============================================
// ORDERS
// =============================================

model Order {
  id            String   @id @default(cuid())
  orderNumber   String   @unique @default(cuid())
  customerId    String
  masterId      String?
  categoryId    String
  subcategoryId String?
  serviceId     String?
  
  title         String
  description   String @db.Text
  status        String   @default("PENDING")
  
  address       String
  district      String?
  lat           Float?
  lng           Float?
  
  scheduledDate DateTime
  scheduledTime String
  urgency       String   @default("PLANNED")
  
  estimatedPrice Float?
  totalPrice     Float?
  finalPrice     Float?
  urgencyFee     Float   @default(0)
  
  paymentMethod String   @default("CASH")
  paymentStatus String   @default("PENDING")
  paidAt        DateTime?
  
  photos        String[] @default([])
  
  acceptedAt    DateTime?
  startedAt     DateTime?
  completedAt   DateTime?
  cancelledAt   DateTime?
  cancelReason  String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  customer    Customer       @relation(fields: [customerId], references: [id])
  master      Master?        @relation(fields: [masterId], references: [id])
  category    Category       @relation(fields: [categoryId], references: [id])
  subcategory Subcategory?   @relation(fields: [subcategoryId], references: [id])
  service     MasterService? @relation(fields: [serviceId], references: [id])
  review      Review?
  messages    Message[]
  applications JobApplication[]
}

// =============================================
// REVIEWS
// =============================================

model Review {
  id         String   @id @default(cuid())
  orderId    String   @unique
  customerId String
  masterId   String
  rating     Int
  comment    String? @db.Text
  photos     String[] @default([])
  
  reply      String?
  repliedAt  DateTime?
  
  isApproved Boolean  @default(true)
  isHidden   Boolean  @default(false)
  helpfulCount Int    @default(0)
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order    Order    @relation(fields: [orderId], references: [id])
  customer Customer @relation(fields: [customerId], references: [id])
  master   Master   @relation(fields: [masterId], references: [id])
}

// =============================================
// FAVORITES
// =============================================

model Favorite {
  id         String   @id @default(cuid())
  customerId String
  masterId   String
  createdAt  DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  master   Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@unique([customerId, masterId])
}

// =============================================
// MESSAGING
// =============================================

model Message {
  id         String   @id @default(cuid())
  orderId    String?
  senderId   String
  receiverId String
  content    String @db.Text
  type       String   @default("TEXT")
  mediaUrl   String?
  isRead     Boolean  @default(false)
  readAt     DateTime?
  createdAt  DateTime @default(now())

  order    Order? @relation(fields: [orderId], references: [id])
  sender   User   @relation("sender", fields: [senderId], references: [id])
  receiver User   @relation("receiver", fields: [receiverId], references: [id])
}

// =============================================
// NOTIFICATIONS
// =============================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String @db.Text
  data      String? @db.Text
  isRead    Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// =============================================
// MASTER AVAILABILITY
// =============================================

model MasterAvailability {
  id        String   @id @default(cuid())
  masterId  String
  date      DateTime
  startTime String
  endTime   String
  isAvailable Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  master Master @relation(fields: [masterId], references: [id], onDelete: Cascade)
}

// =============================================
// CONVERSATIONS
// =============================================

model Conversation {
  id         String   @id @default(cuid())
  customerId String
  masterId   String
  orderId    String?
  lastMessageAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  master   Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)
  messages ConversationMessage[]

  @@unique([customerId, masterId])
}

model ConversationMessage {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  content        String @db.Text
  type           String   @default("TEXT")
  mediaUrl       String?
  isRead         Boolean  @default(false)
  readAt         DateTime?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

// =============================================
// JOB APPLICATIONS
// =============================================

model JobApplication {
  id          String   @id @default(cuid())
  orderId     String
  masterId    String
  
  price       Float
  message     String? @db.Text
  estimatedDuration Int?
  status      String   @default("PENDING")
  
  rejectedReason String?
  rejectedAt     DateTime?
  acceptedAt     DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  order  Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  master Master @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@unique([orderId, masterId])
}

// =============================================
// COMPLAINTS / REPORTS
// =============================================

model Complaint {
  id          String   @id @default(cuid())
  orderId     String?
  reporterId  String
  reportedId  String?
  
  type        String
  subject     String
  description String @db.Text
  evidence    String[] @default([])
  
  status      String   @default("OPEN")
  priority    String   @default("MEDIUM")
  
  adminId     String?
  adminNote   String? @db.Text
  resolution  String? @db.Text
  resolvedAt  DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// =============================================
// SYSTEM SETTINGS
// =============================================

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("string")
  category  String   @default("general")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
