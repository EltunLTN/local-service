// Prisma schema for UstaBul - Local Service Booking Platform
// Database: PostgreSQL (Supabase)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================
// USER & AUTHENTICATION
// =============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  phone         String?   @unique
  password      String?
  role          UserRole  @default(CUSTOMER)
  emailVerified DateTime?
  phoneVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  customer    Customer?
  master      Master?
  sessions    Session[]
  accounts    Account[]
  sentMessages     Message[] @relation("sender")
  receivedMessages Message[] @relation("receiver")
  notifications    Notification[]

  @@index([email])
  @@index([phone])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  CUSTOMER
  MASTER
  ADMIN
}

// =============================================
// CUSTOMER
// =============================================

model Customer {
  id        String   @id @default(cuid())
  userId    String   @unique
  firstName String
  lastName  String
  avatar    String?
  address   String?
  district  String?
  lat       Float?
  lng       Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders    Order[]
  reviews   Review[]
  favorites Favorite[]
  conversations Conversation[]
}

// =============================================
// MASTER (Service Provider)
// =============================================

model Master {
  id              String   @id @default(cuid())
  userId          String   @unique
  firstName       String
  lastName        String
  avatar          String?
  coverImage      String?
  bio             String?  @db.Text
  phone           String
  address         String?
  district        String?
  lat             Float?
  lng             Float?
  
  // Professional Info
  experience      Int      @default(0) // years
  hourlyRate      Float    @default(0)
  isVerified      Boolean  @default(false)
  isInsured       Boolean  @default(false)
  isPremium       Boolean  @default(false)
  isActive        Boolean  @default(true)
  
  // Statistics
  rating          Float    @default(0)
  reviewCount     Int      @default(0)
  completedJobs   Int      @default(0)
  responseRate    Int      @default(100) // percentage
  responseTime    Int      @default(60)  // minutes
  
  // Working Hours
  workingDays     String[] @default(["monday", "tuesday", "wednesday", "thursday", "friday"])
  workingHoursStart String @default("09:00")
  workingHoursEnd   String @default("18:00")
  
  languages       String[] @default(["az"])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories    MasterCategory[]
  services      MasterService[]
  portfolioItems PortfolioItem[]
  orders        Order[]
  reviews       Review[]
  favoritedBy   Favorite[]
  availability  MasterAvailability[]
  conversations Conversation[]

  @@index([district])
  @@index([rating])
  @@index([isVerified])
  @@index([isActive])
}

model MasterCategory {
  id         String   @id @default(cuid())
  masterId   String
  categoryId String
  createdAt  DateTime @default(now())

  master   Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([masterId, categoryId])
}

model MasterService {
  id          String   @id @default(cuid())
  masterId    String
  name        String
  description String?
  price       Float
  duration    Int      // minutes
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  master Master @relation(fields: [masterId], references: [id], onDelete: Cascade)
  orders Order[]

  @@index([masterId])
}

model PortfolioItem {
  id          String   @id @default(cuid())
  masterId    String
  type        PortfolioType @default(IMAGE)
  url         String
  thumbnail   String?
  title       String
  description String?
  beforeImage String?
  afterImage  String?
  images      String[]
  category    String?
  duration    Int?     // hours
  price       Float?
  createdAt   DateTime @default(now())

  master Master @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@index([masterId])
}

enum PortfolioType {
  IMAGE
  VIDEO
}

// =============================================
// CATEGORIES & SERVICES
// =============================================

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  icon        String?
  image       String?
  color       String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  subcategories Subcategory[]
  masters       MasterCategory[]
  orders        Order[]

  @@index([slug])
}

model Subcategory {
  id          String   @id @default(cuid())
  categoryId  String
  name        String
  slug        String   @unique
  description String?
  basePrice   Float    @default(0)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orders   Order[]

  @@index([categoryId])
  @@index([slug])
}

// =============================================
// ORDERS
// =============================================

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique @default(cuid())
  customerId    String
  masterId      String?
  categoryId    String
  subcategoryId String?
  serviceId     String?
  
  // Order Details
  title         String
  description   String      @db.Text
  status        OrderStatus @default(PENDING)
  
  // Location
  address       String
  district      String?
  lat           Float?
  lng           Float?
  
  // Schedule
  scheduledDate DateTime
  scheduledTime String      // e.g., "09:00 - 12:00"
  urgency       Urgency     @default(PLANNED)
  
  // Pricing
  estimatedPrice Float?
  totalPrice     Float?
  finalPrice     Float?
  urgencyFee     Float      @default(0)
  
  // Payment
  paymentMethod PaymentMethod @default(CASH)
  paymentStatus PaymentStatus @default(PENDING)
  paidAt        DateTime?
  
  // Media
  photos        String[]
  
  // Tracking
  acceptedAt    DateTime?
  startedAt     DateTime?
  completedAt   DateTime?
  cancelledAt   DateTime?
  cancelReason  String?
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  customer    Customer       @relation(fields: [customerId], references: [id])
  master      Master?        @relation(fields: [masterId], references: [id])
  category    Category       @relation(fields: [categoryId], references: [id])
  subcategory Subcategory?   @relation(fields: [subcategoryId], references: [id])
  service     MasterService? @relation(fields: [serviceId], references: [id])
  review      Review?
  messages    Message[]

  @@index([customerId])
  @@index([masterId])
  @@index([status])
  @@index([scheduledDate])
  @@index([createdAt])
}

enum OrderStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  DISPUTED
}

enum Urgency {
  PLANNED
  TODAY
  URGENT
}

enum PaymentMethod {
  CASH
  CARD
  LATER
}

enum PaymentStatus {
  PENDING
  PAID
  REFUNDED
  FAILED
}

// =============================================
// REVIEWS
// =============================================

model Review {
  id         String   @id @default(cuid())
  orderId    String   @unique
  customerId String
  masterId   String
  rating     Int      // 1-5
  comment    String?  @db.Text
  photos     String[]
  
  // Response
  reply      String?  @db.Text
  repliedAt  DateTime?
  
  // Moderation
  isApproved Boolean  @default(true)
  isHidden   Boolean  @default(false)
  helpfulCount Int    @default(0)
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order    Order    @relation(fields: [orderId], references: [id])
  customer Customer @relation(fields: [customerId], references: [id])
  master   Master   @relation(fields: [masterId], references: [id])

  @@index([masterId])
  @@index([rating])
  @@index([createdAt])
}

// =============================================
// FAVORITES
// =============================================

model Favorite {
  id         String   @id @default(cuid())
  customerId String
  masterId   String
  createdAt  DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  master   Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@unique([customerId, masterId])
}

// =============================================
// MESSAGING
// =============================================

model Message {
  id         String      @id @default(cuid())
  orderId    String?
  senderId   String
  receiverId String
  content    String      @db.Text
  type       MessageType @default(TEXT)
  mediaUrl   String?
  isRead     Boolean     @default(false)
  readAt     DateTime?
  createdAt  DateTime    @default(now())

  order    Order? @relation(fields: [orderId], references: [id])
  sender   User   @relation("sender", fields: [senderId], references: [id])
  receiver User   @relation("receiver", fields: [receiverId], references: [id])

  @@index([orderId])
  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
}

enum MessageType {
  TEXT
  IMAGE
  SYSTEM
}

// =============================================
// NOTIFICATIONS
// =============================================

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  isRead    Boolean          @default(false)
  readAt    DateTime?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

enum NotificationType {
  ORDER_NEW
  ORDER_ACCEPTED
  ORDER_STARTED
  ORDER_COMPLETED
  ORDER_CANCELLED
  REVIEW_NEW
  MESSAGE_NEW
  PAYMENT_RECEIVED
  SYSTEM
}

// =============================================
// MASTER AVAILABILITY
// =============================================

model MasterAvailability {
  id        String   @id @default(cuid())
  masterId  String
  date      DateTime
  startTime String   // "09:00"
  endTime   String   // "18:00"
  isAvailable Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  master Master @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@index([masterId])
  @@index([date])
}

// =============================================
// CONVERSATIONS
// =============================================

model Conversation {
  id         String   @id @default(cuid())
  customerId String
  masterId   String
  orderId    String?
  lastMessageAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  master   Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)
  messages ConversationMessage[]

  @@unique([customerId, masterId])
  @@index([customerId])
  @@index([masterId])
  @@index([lastMessageAt])
}

model ConversationMessage {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  content        String   @db.Text
  type           MessageType @default(TEXT)
  mediaUrl       String?
  isRead         Boolean  @default(false)
  readAt         DateTime?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

